@model IEnumerable<CRM_Newton_2025v2.Models.Complaint>

@{
    ViewData["Title"] = "Complaints";
}

<h2>Complaints</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Complaint/Feedback</a>
</p>

<table id="myTable" class="display table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Contact</th>
            <th>Complaint/Feedback</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var complaint in Model)
        {
            <tr>
                <td>@complaint.Name</td>
                <td>@complaint.Email</td>
                <td>@complaint.Contact</td>
                <td>@complaint.Message</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@complaint.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@complaint.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Styles {
    <link href="https://cdn.datatables.net/2.2.1/css/dataTables.dataTables.min.css" rel="stylesheet" />
}

@section Scripts {
    <script src="https://cdn.datatables.net/2.2.1/js/dataTables.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let table = new DataTable('#myTable');
        });
    </script>
}
